<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/cabecera_perfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient"
            android:paddingTop="10dp">
            <RelativeLayout
                android:id="@+id/imagen_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circle_radius"
                android:layout_centerHorizontal="true">
                <ImageView

                    android:background="@drawable/circle"
                    android:layout_margin="9dp"
                    android:padding="3dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp" />
                <TextView
                    android:id="@+id/inicialCorreo"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:text=""
                    android:textSize="60sp"
                    android:gravity="center"
                    android:layout_margin="9dp"
                    android:padding="3dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/correoElectronicoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imagen_perfil"
                android:textColor="@android:color/darker_gray"
                android:padding="20dp"
                android:textSize="20sp"
                android:text=""
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <LinearLayout
            android:background="#C5C5C5"
            android:layout_below="@id/cabecera_perfil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direccion de envio"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="30sp"
                android:background="#FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calle"
                    android:padding="5dp"/>
                <EditText android:id="@+id/calleEnvioEd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"/>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:rowCount="2"
                    android:alignmentMode="alignBounds"
                    android:padding="5dp">
                    <TextView android:text="Portal"
                        android:layout_gravity="fill_horizontal"
                        android:layout_column="0"
                        android:layout_row="0"/>
                    <EditText android:id="@+id/portalEnvioEd"
                        android:layout_gravity="fill_horizontal"
                        android:layout_columnWeight="@android:integer/config_mediumAnimTime"
                        android:layout_column="0"
                        android:layout_row="1"/>
                    <TextView android:text="Esc."
                        android:layout_gravity="fill_horizontal"
                        android:layout_column="1"
                        android:layout_row="0"/>
                    <EditText
                        android:id="@+id/escaleraEnvioEd"
                        android:layout_column="1"
                        android:layout_columnWeight="@android:integer/config_mediumAnimTime"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="1"/>
                    <TextView android:text="Piso"
                        android:layout_gravity="fill_horizontal"
                        android:layout_column="2"
                        android:layout_row="0"/>
                    <EditText
                        android:id="@+id/pisoEnvioEd"
                        android:layout_gravity="fill_horizontal"
                        android:layout_column="2"
                        android:layout_columnWeight="@android:integer/config_mediumAnimTime"
                        android:layout_row="1"/>
                    <TextView android:text="Puerta"
                        android:layout_gravity="fill_horizontal"
                        android:layout_column="3"
                        android:layout_row="0"/>
                    <EditText
                        android:id="@+id/puertaEnvioEd"
                        android:layout_gravity="fill_horizontal"
                        android:layout_columnWeight="@android:integer/config_mediumAnimTime"
                        android:layout_column="3"
                        android:layout_row="1"/>
                </GridLayout>
                <Button
                    android:id="@+id/guardarDireccionEnvio"
                    android:background="@color/colorAccent"
                    android:text="GUARDAR"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Direccion de facturacion"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="30sp"
                android:background="#FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calle"
                    android:padding="5dp"/>
                <EditText android:id="@+id/calleFacturacionPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"/>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:rowCount="2"
                    android:alignmentMode="alignBounds"
                    android:padding="5dp">
                    <TextView android:text="Portal"
                        android:layout_gravity="fill_horizontal"
                        android:layout_column="0"
                        android:layout_row="0"/>
                    <EditText android:id="@+id/portalFacturacionPerfil"
                        android:layout_gravity="fill_horizontal"
                        android:layout_columnWeight="@android:integer/config_mediumAnimTime"
                        android:layout_column="0"
                        android:layout_row="1"/>
                    <TextView android:text="Esc."
                        android:layout_gravity="fill_horizontal"
                        android:layout_column="1"
                        android:layout_row="0"/>
                    <EditText android:id="@+id/escaleraFacturacionPerfil"
                        android:layout_column="1"
                        android:layout_columnWeight="@android:integer/config_mediumAnimTime"
                        android:layout_gravity="fill_horizontal"
                        android:layout_row="1"/>
                    <TextView android:text="Piso"
                        android:layout_gravity="fill_horizontal"
                        android:layout_column="2"
                        android:layout_row="0"/>
                    <EditText android:id="@+id/pisoFacturacionPerfil"
                        android:layout_gravity="fill_horizontal"
                        android:layout_column="2"
                        android:layout_columnWeight="@android:integer/config_mediumAnimTime"
                        android:layout_row="1"/>
                    <TextView android:text="Puerta"
                        android:layout_gravity="fill_horizontal"
                        android:layout_column="3"
                        android:layout_row="0"/>
                    <EditText android:id="@+id/puertaFacturacionPerfil"
                        android:layout_gravity="fill_horizontal"
                        android:layout_columnWeight="@android:integer/config_mediumAnimTime"
                        android:layout_column="3"
                        android:layout_row="1"/>
                </GridLayout>
                <Button
                    android:id="@+id/guardarDireccionFacturacion"
                    android:background="@color/colorAccent"
                    android:text="GUARDAR"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datos de la cuenta"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="30sp"
                android:background="#FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nick"
                    android:padding="5dp"/>
                <EditText
                    android:id="@+id/nick"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"/>
                <Button
                    android:id="@+id/guardarNick"
                    android:background="@color/colorAccent"
                    android:text="GUARDAR"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contraseña"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="30sp"
                android:background="#FFFFFF"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:layout_margin="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Antigua contraseña"
                    android:padding="5dp"/>
                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/contraseñaViejaEd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nueva contraseña"
                    android:padding="5dp"/>
                <EditText
                    android:id="@+id/nuevaContraseñaEd"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirmar contraseña"
                    android:padding="5dp"/>
                <EditText
                    android:id="@+id/nuevaContraseñaConfirmarEd"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"/>
                <Button
                    android:id="@+id/guardarContraseñaButton"
                    android:background="@color/colorAccent"
                    android:text="GUARDAR"
                    android:layout_gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="3dp"/>
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>