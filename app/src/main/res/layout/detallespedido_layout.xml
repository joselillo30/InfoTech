<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <TextView
               android:id="@+id/textView4"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Mi pedido:"
               android:textColor="#000000"
               android:textSize="30sp"
               android:textStyle="bold" />

           <androidx.recyclerview.widget.RecyclerView
               android:padding="3dp"
               android:id="@+id/productospedido_recycler"
               android:layout_width="match_parent"
               android:layout_height="200dp"
               android:background="@drawable/border"/>
           <GridLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp">
               <TextView
                   android:text="Enviado a"
                   android:layout_height="wrap_content"
                   android:layout_width="wrap_content" />

               <TextView
                   android:id="@+id/nombreapellidosDetalles"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_row="0"
                   android:layout_column="1"
                   android:text="Jose Llorca martínez"
                   android:layout_gravity="end"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_row="1"
                   android:layout_column="0"
                   android:text="Telefono de contacto" />

               <TextView
                   android:id="@+id/telefonoContacto"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_row="1"
                   android:layout_column="1"
                   android:text="695417921"
                   android:layout_gravity="end"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_row="2"
                   android:layout_column="0"
                   android:text="Fecha de compra" />

               <TextView
                   android:id="@+id/fechaCompra"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_row="2"
                   android:layout_column="1"
                   android:text="21/05/2020"
                   android:layout_gravity="end"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_row="3"
                   android:layout_column="0"
                   android:text="Fecha de entrega" />

               <TextView
                   android:id="@+id/fechaEntregaDetalles"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_row="3"
                   android:layout_column="1"
                   android:text="25/05/2020"
                   android:layout_gravity="end"/>
               <TextView
                   android:layout_marginTop="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_row="4"
                   android:layout_column="0"
                   android:text="Direccion" />

               <TextView
                   android:id="@+id/direccionDetalles"
                   android:layout_marginTop="10dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_row="4"
                   android:layout_column="1"
                   android:text="C\\Quintana, 19, Esc A, 1º piso, Puerta 4"
                   android:layout_gravity="end"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_row="5"
                   android:layout_column="0"
                   android:text="Localidad" />

               <TextView
                   android:id="@+id/lcoalidadDetalles"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_row="5"
                   android:layout_column="1"
                   android:text="Villajoyosa"
                   android:layout_gravity="end"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_row="6"
                   android:layout_column="0"
                   android:text="Provincia" />

               <TextView
                   android:id="@+id/provinciaDetalles"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_row="6"
                   android:layout_column="1"
                   android:text="Alicante"
                   android:layout_gravity="end"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_row="7"
                   android:layout_column="0"
                   android:text="Codigo Postal" />

               <TextView
                   android:id="@+id/codPostalDetalles"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_row="7"
                   android:layout_column="1"
                   android:text="03570"
                   android:layout_gravity="end"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_row="8"
                   android:layout_column="0"
                   android:text="Pais" />

               <TextView
                   android:id="@+id/paisDetalles"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_row="8"
                   android:layout_column="1"
                   android:text="España"
                   android:layout_gravity="end"/>
           </GridLayout>

           <TextView
               android:layout_marginTop="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Metodo de pago"
               android:gravity="center"
               android:textColor="#000000"
               android:drawableLeft="@drawable/ic_credit_card"
               android:drawablePadding="10dp"/>
           <TextView
               android:id="@+id/metodopagoDetalles"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Contrareembolso"/>

           <LinearLayout
               android:layout_marginTop="30dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:textSize="20sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Total: "/>
               <TextView
                   android:id="@+id/precioPedido"
                   android:textSize="20sp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="end"
                   android:textColor="@color/toolbarBackground"
                   android:text="500€"/>
           </LinearLayout>
           <Button
               android:id="@+id/volverDetallesPedidoButton"
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:background="@drawable/rounded_rectangle"
               android:backgroundTint="@color/toolbarBackground"
               android:text="volver"
               android:layout_marginTop="30dp"/>
       </LinearLayout>
   </ScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>