<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resumen \ndel Pedido"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:padding="3dp"
                android:id="@+id/resumenpedido_recycler"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/border">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:text="Precio total: "
                android:textSize="18sp" />

            <TextView
                android:id="@+id/precioResumenPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:shadowColor="#FFFFFF"
                android:text="500€"
                android:textColor="@color/toolbarBackground"
                android:textSize="18sp" />
            <TextView
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Datos personales"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
            <LinearLayout
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nombreapellidosResumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jose Llorca Martinez"/>

                <TextView
                    android:id="@+id/telefonoResumen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tlf: 666666666" />

                <TextView
                    android:id="@+id/direccionResumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C\\Quintana, 19, Esc A, 1º Piso, Puerta 4"/>
                <TextView
                    android:id="@+id/codpostalCiudadResumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="03570, Villajoyosa"/>
                <TextView
                    android:id="@+id/provinciaPaisResumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alicante, España"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transportista"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:id="@+id/nombreTransportista"
                    android:text="SEUR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha de entrega estimada: "/>
                    <TextView
                        android:id="@+id/fechaEntrega"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="27/05/2020"
                        android:textColor="@color/toolbarBackground"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/finalizarPedidoButton"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_rectangle"
                android:backgroundTint="@color/toolbarBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Finalizar Pedido"/>
        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>